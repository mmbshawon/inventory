@model IEnumerable<InventoryManagement.Models.ProductStock>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script type="text/javascript" src="http://codeseven.github.com/toastr/toastr.js"></script>
<link rel="stylesheet" type="text/css" href="http://codeseven.github.com/toastr/toastr.css">


<script src="https://use.fontawesome.com/d94f445648.js"></script>
<br /> <br />
<div class="col-md-10 offset-md-1">

    <p>
        @Html.ActionLink("Add New Stock", "Create")
    </p>

    <table class="table table-striped table-hover table-bordered" id="ProductTable">
        <thead>
            <tr>
                <th>
                    StyleName
                </th>
                <th>
                    SSize
                </th>
                <th>
                    MSize
                </th>
                <th>
                    LSizw
                </th>
                <th>
                    XlSizw
                </th>
                <th>
                    XxlSize
                </th>
                <th>
                    Action
                </th>
            </tr>

        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Products.StyleName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SSize)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MSize)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LSizw)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.XlSizw)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.XxlSize)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />

@section scripts{
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script>
        $('#ProductTable').DataTable({
            "bFilter": true,
            "bLengthChange": false
        });
    </script>
}