@model IEnumerable<InventoryManagement.Models.Products>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script type="text/javascript" src="http://codeseven.github.com/toastr/toastr.js"></script>
<link rel="stylesheet" type="text/css" href="http://codeseven.github.com/toastr/toastr.css">


<script src="https://use.fontawesome.com/d94f445648.js"></script>
<br /> <br />
       <div class="col-md-10 offset-md-1">
      
           <p>
               @Html.ActionLink("Add New Stock", "Create")  <span class="fa fa-plus-square" aria-hidden="true"></span>
           </p>
           <table class="table table-striped table-hover table-bordered" id="ProductTable">
               <thead>
                   <tr>
                       <th>
                           Style Name
                       </th>
                       <th>
                           Product Type
                       </th>
                       <th>
                           Sizes
                       </th>
                       <th>
                           Seasons
                       </th>
                       <th>
                           Product Quantity
                       </th>
                       <th>
                           Action
                       </th>
                   </tr>

               </thead>

               @foreach (var item in Model)
               {
                   <tr>
                       <td>
                           @Html.DisplayFor(modelItem => item.StyleName)
                       </td>
                       <td>
                           @Html.DisplayFor(modelItem => item.CodeProductTypes.ProductTypesName)
                       </td>
                       <td>
                           @Html.DisplayFor(modelItem => item.ProductSizes.SizesName)
                       </td>
                       <td>
                           @Html.DisplayFor(modelItem => item.CodeSeasons.SeasonsName)
                       </td>
                       <td>
                           @Html.DisplayFor(modelItem => item.ProductQuantity)
                       </td>
                       <td>
                           @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                           @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                           @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                       </td>
                   </tr>
               }

           </table>
       </div>

<link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />

@section scripts{
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script>
        $('#ProductTable').DataTable({
            "bFilter": true,
            "bLengthChange": false
        });
    </script>
}